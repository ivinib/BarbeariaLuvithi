<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_esqueci_senha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.example.dourado_dtona.barbearia40.esqueciSenha">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="127dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView4" />

    <TextView
        android:text="@string/confirmaEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/textView2"
        android:gravity="left"
        android:textColor="@color/cinza"
        android:textSize="24sp"
        android:textStyle="normal|italic|bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="@string/email"
        android:textColor="@color/cinza"
        android:textAlignment="center"
        android:textColorHint="@color/cinza"
        android:id="@+id/email"
        android:textStyle="normal|italic|bold" />

    <Button
        android:text="@string/btnEsqueciSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnEsqueciSenha"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        android:background="@color/cinza"
        android:fontFamily="cursive"
        android:textSize="28sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:onClick="btnEsqueciSenha"/>

    <TextView
        android:text="@string/voltarLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/voltarLogin"
        android:onClick="voltarLogin"
        android:clickable="true"
        android:gravity="left"
        android:textColor="@color/link"
        android:textSize="20sp"
        android:textStyle="normal|bold|italic"/>
</LinearLayout>
